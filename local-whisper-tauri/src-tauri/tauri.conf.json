{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "local-whisper-tauri",
  "version": "0.1.0",
  "identifier": "com.local.whisper.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Local Whisper",
        "width": 1100,
        "height": 760,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all"
  }
}
